# Environment variables for Docker Compose
# Copy this file to .env and update the values as needed

# MongoDB Configuration (if using local MongoDB)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password123
DB_NAME=student_management

# Backend Configuration
SECRET_KEY=your-super-secret-key-change-in-production
FLASK_ENV=development

# MongoDB URI (choose one)
# For local MongoDB container:
MONGO_URI=mongodb://admin:password123@mongodb:27017/student_management?authSource=admin
# For MongoDB Atlas (replace with your connection string):
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/student_management?retryWrites=true&w=majority

# Frontend Configuration
VITE_API_URL=http://localhost:5000
